{
  "name": "@blinkjun/cli",
  "version": "1.1.1",
  "description": "个人通用脚手架工具",
  "main": "core/index.js",
  "bin": {
    "blink": "./packages/core/bin.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstallmac": "git config core.hooksPath .husky && chmod 700 .husky/*",
    "eslint": "eslint --cache --max-warnings 0  \"packages/**/*.{vue,ts,js,tsx}\" --fix",
    "commit": "git add . && git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blinkJun/cli.git"
  },
  "keywords": [
    "cli"
  ],
  "author": "liangjun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/blinkJun/cli/issues"
  },
  "homepage": "https://github.com/blinkJun/cli#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-angular": "^17.0.3",
    "@commitlint/cz-commitlint": "^17.0.3",
    "@gitbeaker/node": "^35.8.0",
    "adm-zip": "^0.5.9",
    "axios": "^1.3.4",
    "babel-eslint": "^10.1.0",
    "cli-spinner": "^0.2.10",
    "colors": "^1.4.0",
    "commander": "^9.4.1",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.9.0",
    "dotenv": "^16.0.3",
    "download": "^8.0.0",
    "ejs": "^3.1.8",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.10.0",
    "fs-extra": "^11.1.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "import-local": "^3.1.0",
    "inquirer": "^8.2.5",
    "kebabcase": "^1.0.1",
    "lint-staged": "^12.4.1",
    "npminstall": "^4.1.1",
    "npmlog": "^7.0.1",
    "prettier": "^2.7.1",
    "root-check": "^1.0.0",
    "semver": "^7.3.8",
    "simple-git": "^3.15.1",
    "url-join": "^4.0.1",
    "web-norm": "^1.0.27"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "npm run eslint"
    ],
    "*.{js,jsx,ts,tsx,md,html,css,lees,scss,sass}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
